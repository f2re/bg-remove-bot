# Telegram
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Database - Option 1: Use single DATABASE_URL (recommended)
DATABASE_URL=postgresql+asyncpg://bgremove_user:your_secure_password@localhost:5432/bg_removal_bot

# Database - Option 2: Use individual variables (will be ignored if DATABASE_URL is set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bg_removal_bot
# DB_USER=bgremove_user
# DB_PASSWORD=your_secure_password

# OpenRouter
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=google/gemini-2.5-flash-image-preview

# YooKassa (ЮКасса) - https://yookassa.ru/
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://t.me/your_bot_username

# Pricing (in kopecks - копейки)
PACKAGE_1_PRICE=5000
PACKAGE_5_PRICE=20000
PACKAGE_10_PRICE=35000
PACKAGE_50_PRICE=150000

# Free images for new users
FREE_IMAGES_COUNT=3

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
